
<!-- Formulaire  -->
<div class="row">
  <div class="col-sm-6">

  <% title("Contact") %>
<h1 class="page-title">Nous Ã©crire</h1>

    <%= form_tag email_confirmation_path, method: 'post', html: {role: "form"} do %>

    <div class="form-group">
      <%= label_tag :name, "Votre nom" %>
      <div class="row">
        <div class="col-xs-12">
          <%= text_field_tag :name, @name, placeholder: "Entrer votre nom", :autofocus => true, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag :email, "Votre email" %>
      <div class="row">
        <div class="col-xs-12">
          <%= text_field_tag :email, @email, placeholder: "Entrer votre email", class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag :message, "Votre message" %>
      <div class="row">
        <div class="col-xs-12">
          <%= text_area_tag :message, @message, placeholder: "Entrer votre message", rows: 10, class: "form-control" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 padded">
        <button class='btn btn-primary'>
          <i class='fa fa-envelope'></i> Envoyer
        </button>
      </div>
    </div>
    <% end %>
  </div>

<h1 class="page-title">Nous Rencontrer </h1>

